     <script>
        let box = document.querySelector("input");
        let numBtns = document.querySelectorAll(".number");
        let oprBtns = document.querySelectorAll(".operator");
        let result = "";
        numBtns.forEach(
            (btn) => {
                btn.addEventListener("click", appendNum);
            }
        )
        oprBtns.forEach(
            (btn) => {
                btn.addEventListener("click", appendOpr);
            }
        )

        function appendNum() {
            result += event.srcElement.innerHTML;
            box.value = result;
        }

        function appendOpr() {
            result += event.srcElement.innerHTML;
            box.value = result;
        }

        document.querySelector(".solve").addEventListener("click",
            () => {
                result = eval(result);
                box.value = result;

            }
        )

        document.querySelector(".clr").addEventListener("click",
            () => {
                result = "";
                box.value = result;
            }
        )
    </script>
