<script>
    $(document).ready(function(){
        // animate
        $("#click").click(function(){
            $("p").css(
                {
                    textShadow: '10px 10px 10px black',
                    marginLeft: '70vh'
                },7000)
        })
    })
        $("#stop").click(function(){
            $("p").stop()
        })
</script>
    <button id="click">click</button>
    <button id="stop">stop</button>
