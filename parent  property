<script type="text/javascript">
	$(document).ready(function(){
		$(".btn").click(function(){
			$(".child_two").parent().css("background-color","blue");
		});
		$(".btn2").click(function(){
			$(".child_two").parents().css("background-color","blue");
		});
		$(".btn").click(function(){
			$("li").parentsUntill(".great-grand-parent").css("background-color","cyan")
