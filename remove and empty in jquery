<p>This is another paragraph in the div.</p>

</div>
<br>
<button id="remove">Remove div element</button>
<button id="empty">Empty div element</button>
<script>
$(document).ready(function(){
  $("#remove").click(function(){
    $("#div1").remove();
  });

  $("#empty").click(function(){
    $("#div1").empty();
  });
});
</script>
